<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cpfei.project">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DragPhotoViewActivity"
            android:label="DragPhotoViewActivity"/>
        <activity
            android:name=".activity.DragPhotoActivity"
            android:label="DragPhoto"
            android:theme="@style/AppThemeTranslucent"/>
        <activity
            android:name=".activity.material.ToolBarActivity"
            android:label="ToolBar"
            android:theme="@style/AppThemeBase"/>
        <activity
            android:name=".activity.MaterialDesignActivity"
            android:label="MaterialDesign"/>
        <activity
            android:name=".activity.material.DrawerLayoutActivity"
            android:theme="@style/AppThemeNoTitleBar"/>
        <activity
            android:name=".activity.material.CoordinatorLayoutActivity"
            android:theme="@style/AppThemeNoTitleBar"/>
        <activity android:name=".activity.RecyclerViewGridActivity"/>
        <activity android:name=".activity.SlideSureActivity">
        </activity>
        <activity android:name=".activity.CircleProgressBarActivity">
        </activity>
        <activity android:name=".activity.PermissionActivity">
        </activity>
        <activity android:name=".activity.Rotate3dAnimationActivity">
        </activity>
        <activity android:name=".activity.stereoview.SettingActivity"/>
        <activity android:name=".activity.stereoview.ImageActivity"/>
        <activity android:name=".activity.stereoview.LoginActivity"/>
        <activity android:name=".activity.PicassoActivity">
        </activity>
    </application>

</manifest>