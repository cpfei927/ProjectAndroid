<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cpfei.project.activity.ViewIsVisibleActivity">

    <TextView
        android:id="@+id/viewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_46c062"
        android:textSize="@dimen/text_size_18"
        android:layout_marginLeft="@dimen/dimen_100dp"
        tools:text="@string/app_name"/>


    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000ff"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="-90dp">
    </View>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/isShown"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_46c062"
            android:textSize="@dimen/text_size_18"
            android:layout_centerInParent="true"
            android:text="isShown"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/GlobalVisRect"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_46c062"
            android:textSize="@dimen/text_size_18"
            android:layout_centerInParent="true"
            android:text="GlobalVisibleRect"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/LocalVisRect"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_46c062"
            android:textSize="@dimen/text_size_18"
            android:layout_centerInParent="true"
            android:text="GlobalVisibleRect"
            tools:text="@string/app_name"/>


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_48dp"
        android:layout_marginLeft="@dimen/dimen_100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_blue_deep"
            android:orientation="vertical">

            <View
                android:id="@+id/ScrollTitleView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:background="@color/color_6c6a6a"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@color/color_7a7a7a"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
