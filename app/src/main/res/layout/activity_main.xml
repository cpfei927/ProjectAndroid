<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/materialDesign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="MaterialDesign"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_ff5757"/>


            <TextView
                android:id="@+id/photoView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="PhotoView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_46c062"/>

            <TextView
                android:id="@+id/recyclerGridView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="RecyclerGridView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_6c6a6a"/>


            <TextView
                android:id="@+id/slideSureView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="SlideSureView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_6c6a6a"/>


        </LinearLayout>






    </ScrollView>
</RelativeLayout>
