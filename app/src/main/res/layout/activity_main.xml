<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:paddingBottom="@dimen/dimen_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/materialDesign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="MaterialDesign"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_ff5757"/>


            <TextView
                android:id="@+id/photoView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="PhotoView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_46c062"/>

            <TextView
                android:id="@+id/recyclerGridView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="RecyclerGridView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_6c6a6a"/>


            <TextView
                android:id="@+id/slideSureView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="SlideSureView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_e66463"/>

            <TextView
                android:id="@+id/circleProgressBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="CircleProgressBar"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_fdab55"/>


            <TextView
                android:id="@+id/permissionActivity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="PermissionActivity"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_ba78ff"/>

            <TextView
                android:id="@+id/rotate3dAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="Rotate3dAnimation"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_d3d3d3"/>


            <TextView
                android:id="@+id/picasso"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="Picasso"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_4ea0ec"/>


            <TextView
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="ViewPager"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_46c062"/>


            <TextView
                android:id="@+id/dragView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="DragView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_fdab55"/>



            <TextView
                android:id="@+id/viewPagerTransformer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="ViewPagerTransformer"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_46c062"/>


            <TextView
                android:id="@+id/bounceListView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="BounceListView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_f6a90e"/>


            <TextView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:text="WebView"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_22"
                android:background="@color/color_763ecc"/>

        </LinearLayout>






    </ScrollView>
</RelativeLayout>
